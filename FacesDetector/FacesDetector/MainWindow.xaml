        <Button x:Name="chooseFolderOutputButton" Content="Обзор" HorizontalAlignment="Left" Margin="400,44,0,0" VerticalAlignment="Top" Width="75" Click="chooseFolderOutputButton_Click" Height="23"/>
        <Button x:Name="chooseFolderDebugOutputButton" Content="Обзор" HorizontalAlignment="Left" Margin="400,75,0,0" VerticalAlignment="Top" Width="75" Click="chooseFolderDebugOutputButton_Click" Height="23"/>

    </Grid>
